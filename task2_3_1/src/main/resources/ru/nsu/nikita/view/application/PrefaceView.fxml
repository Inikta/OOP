<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<VBox fx:id="root" alignment="CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.nsu.nikita.view.application.PrefaceView">
    <BorderPane>
        <center>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Snake the Game" textAlignment="CENTER" BorderPane.alignment="CENTER">
                <font>
                    <Font name="Century Gothic" size="58.0" />
                </font>
                <textFill>
                    <LinearGradient startX="1.0" startY="0.4407582938388625">
                        <stops>
                            <Stop>
                                <color>
                                    <Color red="0.75" green="0.44907405972480774" blue="0.0555555559694767" />
                                </color>
                            </Stop>
                            <Stop offset="1.0">
                                <color>
                                    <Color red="1.0" green="1.0" blue="1.0" />
                                </color>
                            </Stop>
                        </stops>
                    </LinearGradient>
                </textFill>
            </Label>
        </center>
    </BorderPane>
    <Label text="Horizontal Size" fx:id="xSizeLabel">
        <font>
            <Font name="Century Gothic" size="22.0" />
        </font>
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
    </Label>
    <TextField onKeyTyped="#onXSizeTextInput" fx:id="xSizeTextField" />
    <Label fx:id="ySizeLabel" text="Vertical Size">
        <font>
            <Font name="Century Gothic" size="22.0" />
        </font>
    </Label>
    <TextField fx:id="ySizeTextField" onKeyTyped="#onYSizeTextInput" />
    <Label fx:id="goalLabel" text="Goal">
        <font>
            <Font name="Century Gothic" size="22.0" />
        </font>
    </Label>
    <TextField fx:id="goalTextField" onKeyTyped="#onGoalTextInput" />
    <BorderPane>
        <center>
            <Button fx:id="startButton" mnemonicParsing="false" onAction="#onStartButtonPressed" text="Start" textAlignment="CENTER">
                <font>
                    <Font name="Century Gothic" size="22.0" />
                </font>
            </Button>
        </center>
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
    </BorderPane>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
